<h1 class="text-2xl font-bold text-slate-900 mb-1">Create account</h1>
<p class="text-sm text-slate-500 mb-6">Set up your organization and start monitoring margins.</p>

<%= form_with model: @user, url: registration_path, class: "space-y-4" do |form| %>
  <% if @user.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-1">Organization name</label>
    <input type="text" name="organization_name" required autofocus value="<%= params[:organization_name] %>" placeholder="Your company name" class="input-field" />
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-1">Email address</label>
    <%= form.email_field :email_address, required: true, autocomplete: "username", placeholder: "you@example.com", class: "input-field" %>
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-1">Password</label>
    <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "At least 8 characters", maxlength: 72, class: "input-field" %>
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-1">Confirm password</label>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "input-field" %>
  </div>

  <div class="pt-2">
    <%= form.submit "Create Account", class: "btn-primary w-full" %>
  </div>

  <p class="text-sm text-center text-slate-500 pt-1">
    Already have an account? <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-700 font-medium transition-colors" %>
  </p>
<% end %>
