<div class="mb-4">
  <%= link_to "&larr; Dashboard".html_safe, root_path, class: "link text-sm" %>
</div>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Vendor Rates <span class="text-gray-400 font-normal text-lg">(<%= @vendor_rates.size %>)</span></h1>
  <%= link_to "New Rate", new_admin_vendor_rate_path, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded text-sm font-medium" %>
</div>

<div class="card p-4 mb-6">
  <%= form_with url: admin_vendor_rates_path, method: :get, class: "flex flex-wrap items-end gap-4" do %>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Vendor</label>
      <input type="text" name="vendor" value="<%= params[:vendor] %>" placeholder="e.g. openai" class="border border-gray-300 rounded px-3 py-2 text-sm" />
    </div>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Model</label>
      <input type="text" name="model" value="<%= params[:model] %>" placeholder="e.g. gpt-4o" class="border border-gray-300 rounded px-3 py-2 text-sm" />
    </div>
    <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded text-sm font-medium">Filter</button>
    <% if params[:vendor].present? || params[:model].present? %>
      <%= link_to "Clear", admin_vendor_rates_path, class: "border border-gray-300 rounded px-3 py-2 text-sm text-gray-600 hover:bg-gray-50" %>
    <% end %>
  <% end %>
</div>

<div class="card overflow-hidden">
  <table class="w-full text-sm">
    <thead class="bg-gray-50">
      <tr class="border-b text-left text-gray-500">
        <th class="py-3 px-4">Vendor</th>
        <th class="py-3 px-4">Model</th>
        <th class="py-3 px-4 text-right">Input / 1K</th>
        <th class="py-3 px-4 text-right">Output / 1K</th>
        <th class="py-3 px-4">Unit</th>
        <th class="py-3 px-4">Scope</th>
        <th class="py-3 px-4">Status</th>
        <th class="py-3 px-4"></th>
      </tr>
    </thead>
    <tbody>
      <% @vendor_rates.each do |rate| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="py-3 px-4 font-medium text-gray-900"><%= rate.vendor_name %></td>
          <td class="py-3 px-4 font-mono text-gray-700"><%= rate.ai_model_name %></td>
          <td class="py-3 px-4 text-right font-mono"><%= number_with_precision(rate.input_rate_per_1k, precision: 5) %></td>
          <td class="py-3 px-4 text-right font-mono"><%= number_with_precision(rate.output_rate_per_1k, precision: 5) %></td>
          <td class="py-3 px-4 text-gray-500"><%= rate.unit_type %></td>
          <td class="py-3 px-4">
            <% if rate.organization %>
              <span class="inline-flex items-center bg-purple-100 text-purple-700 text-xs px-2 py-0.5 rounded-full"><%= rate.organization.name %></span>
            <% else %>
              <span class="inline-flex items-center bg-gray-100 text-gray-600 text-xs px-2 py-0.5 rounded-full">Global</span>
            <% end %>
          </td>
          <td class="py-3 px-4">
            <% if rate.active? %>
              <span class="inline-flex items-center bg-green-100 text-green-700 text-xs px-2 py-0.5 rounded-full">Active</span>
            <% else %>
              <span class="inline-flex items-center bg-red-100 text-red-700 text-xs px-2 py-0.5 rounded-full">Inactive</span>
            <% end %>
          </td>
          <td class="py-3 px-4 text-right space-x-2">
            <%= link_to edit_admin_vendor_rate_path(rate), class: "text-gray-400 hover:text-blue-600", title: "Edit" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="size-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" /></svg>
            <% end %>
            <%= button_to admin_vendor_rate_path(rate), method: :delete, class: "text-gray-400 hover:text-red-600 cursor-pointer", title: "Delete", data: { turbo_confirm: "Delete this rate?" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="size-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" /></svg>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @vendor_rates.empty? %>
        <tr>
          <td colspan="8" class="py-8 text-center text-gray-400">No vendor rates found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
