<div class="flex gap-2">
  <% %w[all 7d 30d 90d].each do |period| %>
    <% active = selected == period %>
    <%= link_to t("shared.period.#{period}"),
      url_for(period: period == "all" ? nil : period),
      class: "px-3 py-1 rounded text-sm font-medium #{active ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
  <% end %>
</div>
