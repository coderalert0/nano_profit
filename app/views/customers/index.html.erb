<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= t("customers.index.title") %> <span class="text-gray-400 font-normal text-lg">(<%= @total_count %>)</span></h1>
  <%= render "shared/period_selector", selected: @selected_period %>
</div>

<% period_params = @selected_period == "all" ? {} : { period: @selected_period } %>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= customers_path(**period_params) %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-gray-50">
      <tr class="border-b text-left text-gray-500">
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort"><%= t("shared.customer") %></th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort"><%= t("shared.external_id") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.subscription") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.revenue") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.cost") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.margin") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.margin_percent") %></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", customer_margins: @customer_margins, page: @page, total_pages: @total_pages %>
      <% if @customer_margins.empty? %>
        <tr>
          <td colspan="7" class="empty-state"><%= t("customers.index.no_data") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
