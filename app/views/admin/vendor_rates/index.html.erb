<%= render "admin/nav" %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Vendor Rates <span class="text-gray-400 font-normal text-lg">(<%= @total_count %>)</span></h1>
  <%= link_to "New Rate", new_admin_vendor_rate_path, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded text-sm font-medium" %>
</div>

<div class="card p-4 mb-6">
  <%= form_with url: admin_vendor_rates_path, method: :get, class: "flex flex-wrap items-end gap-4" do %>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Vendor</label>
      <input type="text" name="vendor" value="<%= params[:vendor] %>" placeholder="e.g. openai" class="border border-gray-300 rounded px-3 py-2 text-sm" />
    </div>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Model</label>
      <input type="text" name="model" value="<%= params[:model] %>" placeholder="e.g. gpt-4o" class="border border-gray-300 rounded px-3 py-2 text-sm" />
    </div>
    <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded text-sm font-medium">Filter</button>
    <% if params[:vendor].present? || params[:model].present? %>
      <%= link_to "Clear", admin_vendor_rates_path, class: "border border-gray-300 rounded px-3 py-2 text-sm text-gray-600 hover:bg-gray-50" %>
    <% end %>
  <% end %>
</div>

<% filter_params = { vendor: params[:vendor], model: params[:model] }.compact_blank %>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= admin_vendor_rates_path(**filter_params) %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-gray-50">
      <tr class="border-b text-left">
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Vendor</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Model</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">Input / 1K</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">Output / 1K</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Unit</th>
        <th class="py-3 px-4 text-gray-500">Scope</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Status</th>
        <th class="py-3 px-4"></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", vendor_rates: @vendor_rates, page: @page, total_pages: @total_pages %>
      <% if @vendor_rates.empty? %>
        <tr>
          <td colspan="8" class="py-8 text-center text-gray-400">No vendor rates found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
