<div class="flex items-center gap-1 mb-6 border-b border-slate-200">
  <%
    tabs = [
      { label: "Vendor Rates", path: admin_vendor_rates_path },
      { label: "Price Drifts", path: admin_price_drifts_path }
    ]
  %>
  <% tabs.each do |tab| %>
    <% active = request.path.start_with?(tab[:path]) %>
    <%= link_to tab[:label], tab[:path],
      class: "px-4 py-2.5 text-sm font-medium border-b-2 -mb-px transition-colors #{active ? 'border-blue-600 text-blue-600' : 'border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300'}" %>
  <% end %>
</div>
