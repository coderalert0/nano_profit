<div class="mb-4">
  <%= link_to "&larr; #{@customer.name || @customer.external_id}".html_safe, customer_path(@customer), class: "text-blue-600 hover:underline text-sm" %>
</div>

<h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t("customers.edit.title", name: @customer.name || @customer.external_id) %></h1>

<div class="bg-white rounded-lg shadow p-6 max-w-lg">
  <%= form_with(model: @customer) do |form| %>
    <% if @customer.errors.any? %>
      <div class="bg-red-50 text-red-600 p-4 rounded mb-4">
        <ul class="list-disc pl-4">
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :monthly_subscription_revenue_in_cents, t("customers.edit.subscription_revenue_label"), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :monthly_subscription_revenue_in_cents, min: 0, step: 1, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <p class="text-sm text-gray-500 mt-1"><%= t("customers.edit.subscription_revenue_hint") %></p>
    </div>

    <div class="flex items-center gap-4">
      <%= form.submit t("shared.save"), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to t("shared.cancel"), customer_path(@customer), class: "text-gray-500 hover:underline" %>
    </div>
  <% end %>
</div>
