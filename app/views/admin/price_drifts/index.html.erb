<%= render "admin/nav" %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Price Drifts <span class="text-gray-400 font-normal text-lg">(<%= @total_count %>)</span></h1>
</div>

<div class="card p-4 mb-6">
  <div class="flex items-end gap-4">
    <%= form_with url: update_threshold_admin_price_drifts_path, method: :patch, class: "flex items-end gap-3" do %>
      <div>
        <label class="block text-xs font-medium text-gray-500 mb-1">Drift Threshold (%)</label>
        <input type="text" name="drift_threshold" value="<%= @drift_threshold_pct %>" class="border border-gray-300 rounded px-3 py-2 text-sm font-mono w-40" />
      </div>
      <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded text-sm font-medium cursor-pointer">Update</button>
    <% end %>
    <p class="text-xs text-gray-400 ml-2 pb-2">Minimum % rate change to flag a drift. Default: 1%</p>
  </div>
</div>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= admin_price_drifts_path %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-gray-50">
      <tr class="border-b text-left">
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Vendor</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Model</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">Old Input / 1K</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">New Input / 1K</th>
        <th class="py-3 px-4 text-right text-gray-500">Input Change</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">Old Output / 1K</th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number">New Output / 1K</th>
        <th class="py-3 px-4 text-right text-gray-500">Output Change</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Status</th>
        <th class="py-3 px-4"></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", price_drifts: @price_drifts, page: @page, total_pages: @total_pages %>
      <% if @price_drifts.empty? %>
        <tr>
          <td colspan="10" class="py-8 text-center text-gray-400">No price drifts detected yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
