<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-slate-900"><%= t("event_types.index.title") %> <span class="text-slate-400 font-normal text-lg">(<%= @total_count %>)</span></h1>
  <%= render "shared/period_selector", selected: @selected_period %>
</div>

<% period_params = @selected_period == "all" ? {} : { period: @selected_period } %>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= event_types_path(**period_params) %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-slate-50/75">
      <tr class="border-b border-slate-200 text-left text-slate-500">
        <th class="py-3 px-4 text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort"><%= t("shared.event_type") %></th>
        <th class="py-3 px-4 text-right text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.events_count") %></th>
        <th class="py-3 px-4 text-right text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.revenue") %></th>
        <th class="py-3 px-4 text-right text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.cost") %></th>
        <th class="py-3 px-4 text-right text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.margin") %></th>
        <th class="py-3 px-4 text-right text-xs font-medium uppercase tracking-wider th-sortable sticky top-0 bg-white z-10" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.margin_percent") %></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", event_type_margins: @event_type_margins, page: @page, total_pages: @total_pages %>
      <% if @event_type_margins.empty? %>
        <tr>
          <td colspan="6" class="empty-state">
            <svg class="w-12 h-12 mx-auto mb-3 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z"/></svg>
            <%= t("event_types.index.no_data") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
