<div class="inline-flex items-center bg-slate-100 rounded-full p-0.5">
  <% %w[all 7d 30d 90d].each do |period| %>
    <% active = selected == period %>
    <%= link_to t("shared.period.#{period}"),
      url_for(period: period == "all" ? nil : period),
      class: "px-3.5 py-1 rounded-full text-sm font-medium transition-colors duration-150 #{active ? 'bg-white text-slate-900 shadow-sm' : 'text-slate-500 hover:text-slate-700'}" %>
  <% end %>
</div>
