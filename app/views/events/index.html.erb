<div class="mb-4">
  <%= link_to "&larr; #{t('dashboard.show.title')}".html_safe, root_path, class: "link text-sm" %>
</div>

<h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t("events.index.title") %> <span class="text-gray-400 font-normal text-lg">(<%= @total_count %>)</span></h1>

<!-- Filters -->
<div class="card p-4 mb-6">
  <%= form_with url: events_path, method: :get, class: "flex flex-wrap items-end gap-4" do %>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1"><%= t("shared.event_type") %></label>
      <select name="event_type[]" multiple data-controller="searchable-select" data-placeholder="<%= t("events.index.all_event_types") %>" class="border border-gray-300 rounded px-3 py-2 text-sm">
        <% @event_types.each do |et| %>
          <option value="<%= et %>" <%= "selected" if @selected_event_types.include?(et) %>><%= et %></option>
        <% end %>
      </select>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1"><%= t("shared.customer") %></label>
      <select name="customer_id[]" multiple data-controller="searchable-select" data-placeholder="<%= t("events.index.all_customers") %>" class="border border-gray-300 rounded px-3 py-2 text-sm">
        <% @customers.each do |c| %>
          <option value="<%= c.id %>" <%= "selected" if @selected_customer_ids.include?(c.id.to_s) %>><%= c.name || c.external_id %></option>
        <% end %>
      </select>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1"><%= t("shared.vendors") %></label>
      <select name="vendor[]" multiple data-controller="searchable-select" data-placeholder="<%= t("events.index.all_vendors") %>" class="border border-gray-300 rounded px-3 py-2 text-sm">
        <% @vendors.each do |v| %>
          <option value="<%= v %>" <%= "selected" if @selected_vendors.include?(v) %>><%= v %></option>
        <% end %>
      </select>
    </div>

    <% if @selected_event_types.any? || @selected_customer_ids.any? || @selected_vendors.any? %>
      <%= link_to t("events.index.clear_filters"), events_path, class: "self-end inline-block border border-gray-300 rounded px-3 py-2 text-sm text-gray-600 hover:bg-gray-50" %>
    <% end %>
  <% end %>
</div>

<% filter_params = { event_type: @selected_event_types, customer_id: @selected_customer_ids, vendor: @selected_vendors }.compact_blank %>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= events_path(**filter_params) %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-gray-50">
      <tr class="border-b text-left text-gray-500">
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort" data-sort-type="date"><%= t("shared.time") %></th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort"><%= t("shared.customer") %></th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort"><%= t("shared.event_type") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.revenue") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.cost") %></th>
        <th class="py-3 px-4 text-right th-sortable" data-action="click->sortable-table#sort" data-sort-type="number"><%= t("shared.margin") %></th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort"><%= t("shared.vendors") %></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", events: @events, page: @page, total_pages: @total_pages %>
      <% if @events.empty? %>
        <tr>
          <td colspan="7" class="empty-state"><%= t("events.index.no_events") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
