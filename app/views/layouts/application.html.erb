<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "NanoProfit" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.4.3/dist/css/tom-select.css">
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.4.3/dist/js/tom-select.complete.min.js"></script>
    <%= javascript_importmap_tags %>
    <%= action_cable_meta_tag %>
  </head>

  <% if authenticated? %>
    <body class="bg-slate-50 min-h-screen" data-controller="sidebar">
      <!-- Mobile header -->
      <div class="lg:hidden fixed top-0 left-0 right-0 z-40 bg-slate-900 border-b border-slate-700 h-14 flex items-center px-4">
        <button type="button" data-action="sidebar#toggle" class="text-slate-300 hover:text-white transition-colors cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
        <span class="ml-3 text-white font-bold text-lg">NanoProfit</span>
      </div>

      <!-- Mobile overlay -->
      <div data-sidebar-target="overlay" data-action="click->sidebar#close" class="fixed inset-0 z-40 bg-black/50 hidden lg:hidden transition-opacity"></div>

      <!-- Sidebar -->
      <aside data-sidebar-target="sidebar" class="fixed top-0 left-0 z-50 w-64 bg-slate-900 min-h-screen h-full flex flex-col -translate-x-full lg:translate-x-0 transition-transform duration-200">
        <!-- Logo -->
        <div class="flex items-center gap-2 px-5 h-16 border-b border-slate-800 shrink-0">
          <div class="w-2 h-2 rounded-full bg-blue-400"></div>
          <span class="text-white font-bold text-lg tracking-tight">NanoProfit</span>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
          <%= link_to dashboard_path, class: "sidebar-link #{'sidebar-link-active' if controller_name == 'dashboard'}" do %>
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-4 0a1 1 0 01-1-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 01-1 1h-2z"/></svg>
            <span>Dashboard</span>
          <% end %>

          <%= link_to customers_path, class: "sidebar-link #{'sidebar-link-active' if controller_name == 'customers'}" do %>
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            <span>Customers</span>
          <% end %>

          <%= link_to event_types_path, class: "sidebar-link #{'sidebar-link-active' if %w[event_types events].include?(controller_name)}" do %>
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z"/></svg>
            <span>Event Types</span>
          <% end %>

          <% unacknowledged_count = Current.organization&.margin_alerts&.unacknowledged&.count || 0 %>
          <%= link_to alerts_path, class: "sidebar-link #{'sidebar-link-active' if controller_name == 'alerts'}" do %>
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
            <span>Alerts</span>
            <% if unacknowledged_count > 0 %>
              <span class="ml-auto inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold leading-none text-red-100 bg-red-600 rounded-full"><%= unacknowledged_count %></span>
            <% end %>
          <% end %>

          <div class="pt-4 mt-4 border-t border-slate-800">
            <%= link_to settings_path, class: "sidebar-link #{'sidebar-link-active' if controller_name == 'settings'}" do %>
              <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.573-1.066z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              <span>Settings</span>
            <% end %>

            <%= link_to documentation_path, class: "sidebar-link #{'sidebar-link-active' if controller_name == 'documentation'}" do %>
              <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              <span>Documentation</span>
            <% end %>

            <% if Current.user&.admin? %>
              <%= link_to admin_vendor_rates_path, class: "sidebar-link #{'sidebar-link-active' if controller_path.start_with?('admin/')}" do %>
                <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                <span>Admin</span>
              <% end %>
            <% end %>
          </div>
        </nav>

        <!-- Bottom section: org + user -->
        <div class="shrink-0 border-t border-slate-800 px-4 py-3">
          <p class="text-xs font-medium text-slate-300 truncate"><%= Current.organization&.name %></p>
          <p class="text-xs text-slate-500 truncate mt-0.5"><%= Current.user&.email_address %></p>
          <%= button_to "Sign out", session_path, method: :delete, class: "mt-2 text-xs text-slate-500 hover:text-slate-300 transition-colors cursor-pointer" %>
        </div>
      </aside>

      <!-- Main content -->
      <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
        <% if notice = flash[:notice] %>
          <div class="px-6 lg:px-8 pt-4">
            <div class="flex items-center gap-2 px-4 py-3 bg-emerald-50 border border-emerald-200 text-emerald-700 text-sm font-medium rounded-lg">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <%= notice %>
            </div>
          </div>
        <% end %>
        <% if alert = flash[:alert] %>
          <div class="px-6 lg:px-8 pt-4">
            <div class="flex items-center gap-2 px-4 py-3 bg-red-50 border border-red-200 text-red-700 text-sm font-medium rounded-lg">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <%= alert %>
            </div>
          </div>
        <% end %>

        <main class="px-6 lg:px-8 py-8">
          <%= yield %>
        </main>
      </div>
    </body>

  <% else %>
    <!-- Auth layout: no sidebar, dark gradient background -->
    <body class="min-h-screen bg-gradient-to-br from-slate-900 to-slate-800 flex items-center justify-center p-4">
      <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="flex items-center justify-center gap-2 mb-8">
          <div class="w-2.5 h-2.5 rounded-full bg-blue-400"></div>
          <span class="text-white font-bold text-2xl tracking-tight">NanoProfit</span>
        </div>

        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <% if notice = flash[:notice] %>
            <div class="flex items-center gap-2 px-4 py-3 mb-6 bg-emerald-50 border border-emerald-200 text-emerald-700 text-sm font-medium rounded-lg">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <%= notice %>
            </div>
          <% end %>
          <% if alert = flash[:alert] %>
            <div class="flex items-center gap-2 px-4 py-3 mb-6 bg-red-50 border border-red-200 text-red-700 text-sm font-medium rounded-lg">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <%= alert %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </body>
  <% end %>
</html>
