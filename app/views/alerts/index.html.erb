<h1 class="text-2xl font-bold text-gray-900 mb-6">Margin Alerts <span class="text-gray-400 font-normal text-lg">(<%= @total_count %>)</span></h1>

<div class="card overflow-hidden" data-controller="infinite-scroll" data-infinite-scroll-url-value="<%= alerts_path %>" data-infinite-scroll-page-value="1">
  <table class="w-full text-sm" data-controller="sortable-table">
    <thead class="bg-gray-50">
      <tr class="border-b text-left text-gray-500">
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort" data-sort-type="date">Time</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Type</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Customer</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Message</th>
        <th class="py-3 px-4 th-sortable" data-action="click->sortable-table#sort">Status</th>
        <th class="py-3 px-4"></th>
      </tr>
    </thead>
    <tbody data-infinite-scroll-target="tbody">
      <%= render "rows", alerts: @alerts, page: @page, total_pages: @total_pages %>
      <% if @alerts.empty? %>
        <tr>
          <td colspan="6" class="empty-state">No alerts. Your margins are looking good!</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
