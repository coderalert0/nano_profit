<%= form_with model: vendor_rate, url: url, class: "space-y-6" do |form| %>
  <% if vendor_rate.errors.any? %>
    <div class="bg-red-50 text-red-600 p-4 rounded-lg">
      <h3 class="font-medium mb-2"><%= pluralize(vendor_rate.errors.count, "error") %> prevented this rate from being saved:</h3>
      <ul class="list-disc list-inside text-sm">
        <% vendor_rate.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Vendor Name</label>
      <%= form.text_field :vendor_name, placeholder: "e.g. openai", class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Model Name</label>
      <%= form.text_field :ai_model_name, placeholder: "e.g. gpt-4o", class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Input Rate per 1K</label>
      <%= form.number_field :input_rate_per_1k, step: "0.00001", min: 0, placeholder: "0.0025", class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
      <p class="text-xs text-gray-400 mt-1">Cost in cents per 1,000 tokens (input)</p>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Output Rate per 1K</label>
      <%= form.number_field :output_rate_per_1k, step: "0.00001", min: 0, placeholder: "0.0100", class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
      <p class="text-xs text-gray-400 mt-1">Cost in cents per 1,000 tokens (output)</p>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Unit Type</label>
      <%= form.text_field :unit_type, placeholder: "tokens", class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Organization (optional)</label>
      <%= form.collection_select :organization_id, Organization.order(:name), :id, :name, { include_blank: "Global (all organizations)" }, class: "block w-full shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 text-sm" %>
      <p class="text-xs text-gray-400 mt-1">Leave as "Global" for a default rate, or pick an org for an override</p>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.check_box :active, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
    <label class="text-sm font-medium text-gray-700">Active</label>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded text-sm font-medium cursor-pointer" %>
    <%= link_to "Cancel", admin_vendor_rates_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
  </div>
<% end %>
