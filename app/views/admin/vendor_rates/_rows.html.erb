<% vendor_rates.each do |rate| %>
  <tr class="border-b hover:bg-gray-50">
    <td class="py-3 px-4 font-medium text-gray-900"><%= rate.vendor_name %></td>
    <td class="py-3 px-4 font-mono text-gray-700"><%= rate.ai_model_name %></td>
    <td class="py-3 px-4 text-right font-mono"><%= number_with_precision(rate.input_rate_per_1k, precision: 6) %></td>
    <td class="py-3 px-4 text-right font-mono"><%= number_with_precision(rate.output_rate_per_1k, precision: 6) %></td>
    <td class="py-3 px-4 text-gray-500"><%= rate.unit_type %></td>
    <td class="py-3 px-4">
      <% if rate.organization %>
        <span class="inline-flex items-center bg-purple-100 text-purple-700 text-xs px-2 py-0.5 rounded-full"><%= rate.organization.name %></span>
      <% else %>
        <span class="inline-flex items-center bg-gray-100 text-gray-600 text-xs px-2 py-0.5 rounded-full">Global</span>
      <% end %>
    </td>
    <td class="py-3 px-4">
      <% if rate.active? %>
        <span class="inline-flex items-center bg-green-100 text-green-700 text-xs px-2 py-0.5 rounded-full">Active</span>
      <% else %>
        <span class="inline-flex items-center bg-red-100 text-red-700 text-xs px-2 py-0.5 rounded-full">Inactive</span>
      <% end %>
    </td>
    <td class="py-3 px-4">
      <div class="flex items-center justify-end gap-3">
        <%= link_to edit_admin_vendor_rate_path(rate), class: "text-gray-400 hover:text-blue-600", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" /></svg>
        <% end %>
        <%= button_to admin_vendor_rate_path(rate), method: :delete, class: "text-gray-400 hover:text-red-600 cursor-pointer", title: "Delete", form: { class: "inline" }, data: { turbo_confirm: "Delete this rate?" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" /></svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
<% if page < total_pages %>
  <tr data-infinite-scroll-target="sentinel" class="sentinel">
    <td colspan="8" class="py-4 text-center text-sm text-gray-400">Loading more...</td>
  </tr>
<% end %>
